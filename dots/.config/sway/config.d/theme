# Apply gtk theming
exec_always ~/.config/sway/scripts/import-gsettings

# Set inner/outer gaps
gaps inner 6
gaps outer 6

# Hide titlebar on windows:
default_border pixel 1

# Default Font
font pango:JetBrainsMono Regular 10

# Thin borders:
smart_borders on
smart_gaps off

# Set wallpaper:
exec ~/.azotebg

set $rosewater #f2d5cf
set $flamingo  #eebebe
